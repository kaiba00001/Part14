@model DoctorAp.Models.ItemsLead

@{
    ViewData["Title"] = "Create";
}

<style>
    /* CSS styles */
    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
    }

    .text-danger {
        color: red;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    /* Additional CSS styles for the layout if needed */
    .row {
        margin: 20px;
    }

    .col-md-4 {
        width: 33.33%;
        float: left;
    }

    .clear {
        clear: both;
    }
</style>

<h1>Create</h1>

<h4>SupplyLead</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item" class="control-label"></label>
                <select asp-for="Item" class="form-control" asp-items="@ViewBag.Items">
                    <option value="Conserta" selected>Conserta</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="clear">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
